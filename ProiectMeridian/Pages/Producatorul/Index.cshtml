@page 
@model ProiectMeridian.Pages.Producatorul.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Producator[0].Producatori)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ProducatorData.Producatorul)
        {
            string selectedRow = "";
            if (item.ID == Model.ProducatorID)
            {
                selectedRow = "table-success";
            }
     <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.Producatori)
            </td>
            <td>
                    <a asp-page="./Index" asp-route-id="@item.ID">Select</a> |

                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@if (Model.ProducatorData.Phones != null)
{
    <h3>Telefoane selectate dupa Producator</h3>
    <table class="table">

        @foreach (var item in Model.ProducatorData.Producatorul)
        {
            string selectedRow = "";
            if (item.ID == Model.ProducatorID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">

                <td>
                    @{
                        foreach (var b in item.Phones)
                        {

                            @b.Nume @: @b.Producator.FullName

                            <br />
                        }
                    }
                </td>
            </tr>
        }
    </table>
}

